<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/random_detail_rp_main"
    android:layout_width="@dimen/dialogWidth"
    android:layout_height="@dimen/dialogHeight"
    android:background="@drawable/rp_small_random_bg">

    <ImageView
        android:id="@+id/iv_random_detail_closed"
        android:layout_width="38dp"
        android:layout_height="38dp"
        android:scaleType="centerInside"
        android:src="@drawable/rp_closed_yellow_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/iv_rd_avatar_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size54px"
        android:background="@drawable/rp_bg_circular_yellow"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_random_detail_closed"/>

    <ImageView
        android:id="@+id/iv_random_detail_avatar"
        android:layout_width="66dp"
        android:layout_height="66dp"
        android:layout_gravity="center"
        android:scaleType="centerInside"
        android:src="@drawable/rp_avatar"
        app:layout_constraintBottom_toBottomOf="@+id/iv_rd_avatar_bg"
        app:layout_constraintLeft_toLeftOf="@+id/iv_rd_avatar_bg"
        app:layout_constraintRight_toRightOf="@+id/iv_rd_avatar_bg"
        app:layout_constraintTop_toTopOf="@+id/iv_rd_avatar_bg"/>

    <TextView
        android:id="@+id/tv_random_detail_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size30px"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@color/rp_money_white"
        android:textSize="@dimen/font42px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_rd_avatar_bg"/>

    <TextView
        android:id="@+id/tv_random_detail_greeting"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size60px"
        android:layout_marginLeft="@dimen/size60px"
        android:layout_marginRight="@dimen/size60px"
        android:layout_marginStart="@dimen/size60px"
        android:layout_marginTop="@dimen/size60px"
        android:ellipsize="end"
        android:gravity="center"
        android:maxEms="22"
        android:maxLines="2"
        android:textColor="@color/rp_title_color"
        android:textSize="@dimen/font69px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_random_detail_username"/>

    <TextView
        android:id="@+id/tv_random_detail_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size15px"
        android:textColor="@color/rp_title_color"
        android:textSize="@dimen/font108px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_random_detail_greeting"/>


    <TextView
        android:id="@+id/tv_random_detail_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size15px"
        android:text="@string/rp_str_switch_amount"
        android:textColor="@color/rp_title_color"
        android:textSize="@dimen/font39px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_random_detail_amount"/>


    <ImageView
        android:id="@+id/iv_random_detail_from_icon"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginBottom="@dimen/size81px"
        android:layout_marginRight="@dimen/size15px"
        android:background="@drawable/rp_avatar"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/tv_random_detail_from_name"/>

    <TextView
        android:id="@+id/tv_random_detail_from_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="XXX给你的红包"
        android:textColor="@color/rp_title_color"
        android:textSize="@dimen/font36px"
        app:layout_constraintBottom_toBottomOf="@+id/iv_random_detail_from_icon"
        app:layout_constraintLeft_toRightOf="@+id/iv_random_detail_from_icon"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_random_detail_from_icon"/>

    <LinearLayout
        android:id="@+id/ll_random_loading"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</android.support.constraint.ConstraintLayout>
