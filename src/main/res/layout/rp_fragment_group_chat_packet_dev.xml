<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/rp_money_bg_color">

    <RelativeLayout
        android:id="@+id/layout_members"
        style="@style/SendMoneyRLayoutStyle"
        android:layout_width="0dp"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_receive"
            style="@style/SendMoneyLeftTextViewStyle"
            android:text="@string/tv_who_can_receive"/>

        <ImageView
            android:id="@+id/iv_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/size30px"
            android:layout_marginRight="@dimen/size45px"
            android:src="@drawable/rp_arrow_forward"/>

        <TextView
            android:id="@+id/tv_receive_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@id/iv_arrow"
            android:layout_toRightOf="@id/tv_receive"
            android:ellipsize="end"
            android:gravity="center|right"
            android:maxEms="11"
            android:maxLines="1"
            android:text="@string/tv_all_person"
            android:textColor="@color/rp_text_black"
            android:textSize="@dimen/font45px"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_money_count"
        style="@style/SendMoneyLeftTextViewStyle"
        android:layout_marginTop="@dimen/size45px"
        android:text="@string/group_money_count"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layout_members"/>

    <TextView
        android:id="@+id/tv_count_unit"
        style="@style/SendMoneyRightTextViewStyle"
        android:text="@string/count_unit"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_money_count"/>

    <EditText
        android:id="@+id/et_money_count"
        style="@style/SendMoneyEditTextStyle"
        android:hint="@string/hint_money_count"
        android:inputType="number"
        android:maxLength="9"
        app:layout_constraintLeft_toRightOf="@+id/tv_money_count"
        app:layout_constraintRight_toLeftOf="@+id/tv_count_unit"
        app:layout_constraintTop_toTopOf="@+id/tv_money_count"
        />


    <TextView
        android:id="@+id/tv_group_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size45px"
        android:layout_marginTop="@dimen/size18px"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_money_count"/>

    <View
        android:id="@+id/white_view"
        android:layout_width="0dp"
        android:layout_height="@dimen/size132px"
        android:layout_marginTop="@dimen/size36px"
        android:background="@color/rp_background_white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_group_count"/>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/money_amount_layout"
        android:layout_width="0dp"
        android:layout_height="@dimen/size132px"
        android:layout_marginTop="@dimen/size36px"
        android:background="@color/rp_background_white"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_group_count">

        <TextView
            android:id="@+id/tv_total_money"
            style="@style/SendMoneyLeftTextViewStyle"
            android:text="@string/group_money_total"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/iv_random_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/size18px"
            android:background="@drawable/rp_random_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/tv_total_money"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tv_money_unit"
            style="@style/SendMoneyRightTextViewStyle"
            android:text="@string/money_unit"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <EditText
            android:id="@+id/et_money_amount"
            style="@style/SendMoneyEditTextStyle"
            android:hint="@string/hint_money_amount"
            android:inputType="numberDecimal"
            android:maxLength="12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/iv_random_icon"
            app:layout_constraintRight_toLeftOf="@+id/tv_money_unit"
            app:layout_constraintTop_toTopOf="parent"/>
    </android.support.constraint.ConstraintLayout>

    <TextView
        android:id="@+id/tv_type_info"
        style="@style/SendMoneyGroupRuleTipsStyle"
        android:text="@string/group_rule_tips_random"
        android:textColor="@color/rp_text_black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white_view"/>

    <TextView
        android:id="@+id/tv_change_type"
        style="@style/SendMoneyGroupRuleTipsStyle"
        android:layout_marginLeft="0dp"
        android:text="@string/group_change_normal"
        android:textColor="@color/rp_text_blue"
        app:layout_constraintLeft_toRightOf="@+id/tv_type_info"
        app:layout_constraintTop_toBottomOf="@+id/white_view"
        />

    <ImageView
        android:id="@+id/btn_layout"
        android:layout_width="@dimen/size186px"
        android:layout_height="@dimen/size186px"
        android:layout_marginTop="@dimen/size45px"
        android:background="@color/rp_background_white"
        android:scaleType="centerInside"
        android:src="@drawable/rp_refresh"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_type_info"/>

    <View
        android:id="@+id/view_line_group"
        android:layout_width="1px"
        android:layout_height="@dimen/size186px"
        android:layout_toLeftOf="@id/btn_layout"
        android:background="@color/rp_money_bg_color"
        app:layout_constraintRight_toLeftOf="@+id/btn_layout"
        app:layout_constraintTop_toTopOf="@+id/btn_layout"
        />

    <EditText
        android:id="@+id/et_greetings"
        style="@style/SendMoneyGreetingsStyle"
        android:layout_width="0dp"
        android:hint="@string/default_money_greeting"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/view_line_group"
        app:layout_constraintTop_toTopOf="@+id/btn_layout"
        />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/size72px"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font108px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_greetings"/>

    <Button
        android:id="@+id/btn_group_put_money"
        style="@style/SendMoneyButtonStyle"
        android:layout_width="0dp"
        android:text="@string/btn_put_money"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_money"/>

    <LinearLayout
        android:id="@+id/target_layout"
        android:layout_width="@dimen/size180px"
        android:layout_height="@dimen/size180px"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        style="@style/SendMoneyBottomTextStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/send_money_bottom_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

    <RelativeLayout
        android:id="@+id/pop_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size63px"
        android:background="@color/rp_msg_red"
        android:visibility="gone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_popup_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/rp_text_yellow"
            android:textSize="@dimen/font45px"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
