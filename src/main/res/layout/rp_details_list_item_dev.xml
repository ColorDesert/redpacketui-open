<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="@color/rp_money_white">


    <ImageView
        android:id="@+id/iv_item_avatar_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="@dimen/size30px"
        android:layout_marginLeft="@dimen/size45px"
        android:layout_marginStart="@dimen/size45px"
        android:layout_marginTop="@dimen/size30px"
        android:src="@drawable/rp_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_money_to_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size30px"
        android:layout_marginStart="@dimen/size30px"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_avatar_icon"
        app:layout_constraintTop_toTopOf="@+id/iv_item_avatar_icon"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size30px"
        android:layout_marginStart="@dimen/size30px"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        app:layout_constraintBottom_toBottomOf="@+id/iv_item_avatar_icon"
        app:layout_constraintLeft_toRightOf="@+id/iv_item_avatar_icon"/>

    <TextView
        android:id="@+id/tv_item_money_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size45px"
        android:layout_marginLeft="@dimen/size45px"
        android:layout_marginRight="@dimen/size45px"
        android:layout_marginStart="@dimen/size45px"
        android:ellipsize="middle"
        android:gravity="right"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        app:layout_constraintLeft_toRightOf="@+id/tv_money_to_user"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_item_avatar_icon"/>

    <TextView
        android:id="@+id/tv_best_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/size45px"
        android:layout_marginRight="@dimen/size45px"
        android:drawableLeft="@drawable/rp_icon_best"
        android:drawablePadding="2dp"
        android:text="@string/best_luck"
        android:textColor="@color/rp_best_luck_yellow"
        android:visibility="gone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_time"/>

    <View
        style="@style/DividerStyle"
        android:layout_alignParentBottom="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />
</android.support.constraint.ConstraintLayout>