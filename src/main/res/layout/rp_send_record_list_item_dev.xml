<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rp_money_white"
    android:paddingTop="@dimen/size30px"
    >

    <TextView
        android:id="@+id/tv_money_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size45px"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size45px"
        android:layout_marginTop="@dimen/size9px"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_money_type"/>

    <TextView
        android:id="@+id/tv_merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size45px"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        app:layout_constraintLeft_toRightOf="@+id/tv_time"
        app:layout_constraintTop_toTopOf="@+id/tv_time"
        />

    <TextView
        android:id="@+id/tv_item_money_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size45px"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_money_type"
        />

    <TextView
        android:id="@+id/tv_item_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/size45px"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_merchant_name"
        />

    <View
        android:id="@+id/view_line_no_head"
        style="@style/DividerStyleNoHead"
        android:layout_marginTop="@dimen/size45px"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"
        />

    <View
        android:id="@+id/view_line"
        style="@style/DividerStyle"
        android:layout_marginTop="@dimen/size30px"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>
</android.support.constraint.ConstraintLayout>