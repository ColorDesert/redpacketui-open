<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rp_money_white"
    android:paddingLeft="@dimen/size30px"
    android:paddingRight="@dimen/size30px"
    android:paddingTop="@dimen/size30px"
    >

    <ImageView
        android:id="@+id/iv_record_sender_avatar"
        android:layout_width="@dimen/size105px"
        android:layout_height="@dimen/size105px"
        android:layout_marginBottom="@dimen/size30px"
        android:src="@drawable/rp_avatar"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_sender_nickname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/size45px"
        android:ellipsize="end"
        android:maxEms="10"
        android:maxLines="1"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        app:layout_constraintLeft_toRightOf="@+id/iv_record_sender_avatar"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:id="@+id/iv_random_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="3dp"
        android:visibility="visible"
        app:layout_constraintLeft_toRightOf="@+id/tv_sender_nickname"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_sender_nickname"
        android:layout_marginLeft="@dimen/size45px"
        android:layout_marginTop="@dimen/size9px"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        app:layout_constraintLeft_toRightOf="@+id/iv_record_sender_avatar"
        app:layout_constraintTop_toBottomOf="@+id/tv_sender_nickname"
        />

    <TextView
        android:id="@+id/tv_item_money_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/tv_sender_nickname"
        android:textColor="@color/rp_text_black"
        android:textSize="@dimen/font45px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/tv_item_merchant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_item_money_amount"
        android:layout_marginTop="@dimen/size9px"
        android:textColor="@color/rp_text_light_grey"
        android:textSize="@dimen/font36px"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_item_money_amount"/>

    <View
        android:id="@+id/view_line_no_head"
        style="@style/DividerStyleNoHead"
        android:layout_marginTop="@dimen/size30px"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>

    <View
        android:id="@+id/view_line"
        style="@style/DividerStyle"
        android:layout_marginTop="@dimen/size30px"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/tv_time"/>

</android.support.constraint.ConstraintLayout>